{% set shuffled = tickerHeadlines | shuffle %}
{% set tickerText = shuffled | join(' +++ ') %}

<div class="news-ticker" role="marquee" aria-live="off" aria-label="Breaking news ticker - hover to slow down">
    <span class="ticker-label">BREAKING</span>
    <div class="ticker-track">
        <span class="ticker-content">+++ {{ tickerText }} +++</span>
        <span class="ticker-content">+++ {{ tickerText }} +++</span>
    </div>
</div>
